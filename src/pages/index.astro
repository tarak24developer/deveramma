---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE, TEMPLE_INFO } from '../config';
import HeroBanner from '../components/HeroBanner.astro';
import Card from '../components/Card.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const upcomingEvents = [
  {
    title: 'Quarter-year Festival',
    date: 'May 09-11, 2025',
    image: '/images/temple/temple-front.png',
    description: 'Join us for our 3-day quarterly temple festival with special poojas, worships and more.',
    url: '/events/quarterly-festival'
  },
  {
    title: 'Dusshera Celebration',
    date: 'September 22-October 02, 2025',
    image: '/images/pooja/special-pooja.jpg',
    description: 'Special rituals, Avatars and offerings during the Dusshera festival.',
    url: '/events/dusshera-celebration'
  }
];
---

<MainLayout title={SITE.title} description={SITE.description}>  <HeroBanner 
    title={t('home.welcome')}
    subtitle={t('home.subtitle')}
    image="/images/temple/temple-front.png"
  />
  
  <section class="temple-intro">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content">
          <h2>Welcome to Meruga Vari Deveramma Temple</h2>
          <p>
            Meruga Vari Deveramma Temple is located in mantada village, near the vijayawada city of Andhra Pradesh, India.
			It is a sacred place dedicated to the worship of Goddess Deveramma (Meruga's family), a revered deity known for her blessings and miracles, worshiped by Meruga's Family.
          </p>
          <p>
            With its rich history spanning centuries, the temple preserves ancient rituals and traditions while providing 
            a serene atmosphere for prayer and Meruga's family Temple.
          </p>
          <div class="intro-buttons">
            <a href="/about" class="btn btn-primary">Learn About Our Temple</a>
            <a href="/contact" class="btn btn-outline">Plan Your Visit</a>
          </div>
        </div>
        <div class="intro-image">
          <img src="/images/temple/deity.png" alt="Deveramma Deity" class="rounded-image" />
        </div>
      </div>
    </div>
  </section>
  
  <section class="events-section">
    <div class="container">
      <div class="section-header">
        <h2>Upcoming Events</h2>
        <p>Join us for these special occasions at the temple</p>
      </div>
      
      <div class="cards-grid">
        {upcomingEvents.map(event => (
          <Card 
            title={event.title}
            image={event.image}
            alt={event.title}
            url={event.url}
          >
            <p><strong>{event.date}</strong></p>
            <p>{event.description}</p>
            <span slot="link-text">Event Details</span>
          </Card>
        ))}
      </div>
      
      <div class="section-footer">
        <a href="/events" class="btn btn-secondary">View All Events</a>
      </div>
    </div>
  </section>
  
  <section class="services-section">
    <div class="container">
      <div class="section-header">
        <h2>Temple Services</h2>
        <p>Spiritual offerings and services for devotees</p>
      </div>
      
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line></svg>
          </div>
          <h3>Weekly Poojas</h3>
          <p>Regular rituals performed by our priests to invoke divine blessings.</p>
          <a href="/poojas" class="link-arrow">Learn More</a>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
          </div>
          <h3>Monthly Poojas</h3>
          <p>Personalized ceremonies for important life events and spiritual milestones.</p>
          <a href="/poojas#special" class="link-arrow">Learn More</a>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M8 14s1.5 2 4 2 4-2 4-2"></path><line x1="9" y1="9" x2="9.01" y2="9"></line><line x1="15" y1="9" x2="15.01" y2="9"></line></svg>
          </div>
          <h3>Special Poojas</h3>
          <p>Cultural events, spiritual discourses and community service initiatives.</p>
          <a href="/events#community" class="link-arrow">Learn More</a>
        </div>
      </div>
    </div>
  </section>
  
  <section class="timings-section">
    <div class="container">
      <div class="timings-box">
        <div class="timings-content">
          <h2>Temple Timings</h2>
          <div class="timings-grid">
            <div>
              <h4>Weekdays</h4>
              <p>{TEMPLE_INFO.timings.weekdays}</p>
            </div>
            <div>
              <h4>Weekends & Holidays</h4>
              <p>{TEMPLE_INFO.timings.weekends}</p>
            </div>
          </div>
          <a href="/contact" class="btn btn-white">Plan Your Visit</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Section Styling */
  section {
    padding: 4rem 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-header h2 {
    color: #8b0000;
    margin-bottom: 0.5rem;
  }
  
  .section-footer {
    text-align: center;
    margin-top: 2rem;
  }
  
  /* Temple Intro Section */
  .temple-intro {
    background-color: #f9f5f0;
  }
  
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .intro-content h2 {
    color: #8b0000;
    margin-bottom: 1.5rem;
  }
  
  .intro-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .intro-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .intro-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  /* Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  /* Services Section */
  .services-section {
    background-color: #fff;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .service-card {
    background-color: #f9f5f0;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    transition: transform 0.3s;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .service-icon {
    width: 80px;
    height: 80px;
    background-color: #8b0000;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }
  
  .service-card h3 {
    color: #8b0000;
    margin-bottom: 1rem;
  }
  
  .link-arrow {
    color: #8b0000;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    margin-top: 1rem;
    font-weight: 500;
  }
  
  .link-arrow::after {
    content: "â†’";
    margin-left: 0.5rem;
    transition: transform 0.3s;
  }
  
  .link-arrow:hover::after {
    transform: translateX(3px);
  }
  
  /* Timings Section */
  .timings-section {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/temple/temple-inside.jpg');
    background-size: cover;
    background-position: center;
    color: white;
  }
  
  .timings-box {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem;
    background-color: rgba(139, 0, 0, 0.8);
    border-radius: 8px;
    text-align: center;
  }
  
  .timings-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 2rem 0;
  }
  
  .timings-box h2 {
    margin-top: 0;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .intro-grid,
    .timings-grid {
      grid-template-columns: 1fr;
    }
    
    .intro-buttons {
      flex-direction: column;
    }
    
    .intro-image {
      order: -1;
    }
    
    section {
      padding: 3rem 0;
    }
  }
</style>
