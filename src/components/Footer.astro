---
import { SITE, TEMPLE_INFO, SOCIAL_MEDIA } from '../config';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import BackToTop from './BackToTop.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-col">
        <h3>Devaramma Temple</h3>
        <p>A sacred place dedicated to spirituality, peace and devotion.</p>        <div class="social-links">
          {SOCIAL_MEDIA.instagram && (
            <a href={SOCIAL_MEDIA.instagram} aria-label="Instagram" title="Instagram" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
            </a>
          )}
          {SOCIAL_MEDIA.youtube && (
            <a href={SOCIAL_MEDIA.youtube} aria-label="YouTube" title="YouTube" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon></svg>
            </a>
          )}
        </div>
      </div>
        <div class="footer-col">
        <h4>{t('footer.address')}</h4>
        <address>
          <div class="address-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: top; margin-right: 5px;"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            {TEMPLE_INFO.address}
          </div>
          <div class="address-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 5px;"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <a href={`tel:${TEMPLE_INFO.phone.split(',')[0].trim()}`}>{TEMPLE_INFO.phone}</a>
          </div>
          <div class="address-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 5px;"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            <a href={`mailto:${TEMPLE_INFO.email}`}>{TEMPLE_INFO.email}</a>
          </div>
        </address>
      </div>
        <div class="footer-col">
        <h4>{t('footer.timings')}</h4>
        <p>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 5px;"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          {TEMPLE_INFO.timings.daily}
        </p>
      </div>
        <div class="footer-col">
        <h4>Quick Links</h4>
        <ul class="footer-links">
          <li><a href={getLocalizedPath('/about', lang)}>About Us</a></li>
          <li><a href={getLocalizedPath('/events', lang)}>Events</a></li>
          <li><a href={getLocalizedPath('/poojas', lang)}>Poojas</a></li>
          <li><a href={getLocalizedPath('/donate', lang)}>Donate</a></li>
          <li><a href={getLocalizedPath('/contact', lang)}>Contact</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} {SITE.name}. {t('footer.rights')}.</p>
    </div>
  </div>
  
  <BackToTop />
</footer>

<style>
  .footer {
    background-color: #f5f0ea;
    color: #333;
    padding: 3rem 0 1rem;
    margin-top: 3rem;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .footer h3 {
    color: #8b0000;
    margin-top: 0;
  }
  
  .footer-col h4 {
    color: #8b0000;
    border-bottom: 2px solid #e6c9a8;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .social-links a {
    color: #8b0000;
    transition: color 0.3s;
  }
  
  .social-links a:hover {
    color: #5a0000;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: #333;
    text-decoration: none;
    transition: color 0.3s;
  }
  
  .footer-links a:hover {
    color: #8b0000;
  }
  
  address {
    font-style: normal;
    line-height: 1.6;
  }
  
  address a {
    color: #333;
    text-decoration: none;
    transition: color 0.3s;
  }
  
  address a:hover {
    color: #8b0000;
  }
  
  .footer-bottom {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e6c9a8;
    text-align: center;
  }
</style>